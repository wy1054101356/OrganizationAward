@model organization
@using org.Model;
@using org.Admin.Common;
@{
    Page.Title = "添加/修改 组织";
    Page.Description = "添加/修改组织";
}
@section css{

}
@section js{

}

<div class="article">
    <div class="ui masthead vertical segment">
        <div class="ui container">
            <div class="introduction">
                <h2 class="ui header">
                    @(Page.Title)
                    <div class="sub header">
                        @(Page.Description)
                    </div>
                </h2>
            </div>
        </div>
    </div>
    <div class="main container">
        <div class="ui active tab" data-tab="overview">
            <form class="ui form" action="@Url.Action("EditORG")" method="post">
                <div class="ui segment">
                    <div class="field">
                        <label>组织名</label>
                        <input type="hidden" name="oid" id="oid" placeholder="后台帐号" value="@Model.oid" />
                        <input type="hidden" name="created" id="created" placeholder="后台帐号" value="@Model.created" />
                        <input type="hidden" name="status" id="status" placeholder="后台帐号" value="@Model.status" />
                        <input type="text" name="oname" id="oname" placeholder="后台帐号" value="@Model.oname" />
                    </div>
                </div>
                <input type="hidden" name="uid" id="uid" />
                <div class="ui segment">
                    <div class="fields" style="margin-top:2em">
                        <button class="ui fluid primary button" type="submit">确认保存</button>
                        <button class="ui fluid  button" type="button" onclick="top.location.href = '/ORG';">返回列表...</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
}