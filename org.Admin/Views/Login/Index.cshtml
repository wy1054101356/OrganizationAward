@model User
@using org.Model;
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <title>国航·</title>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta name="viewport" content="width=device-width, initial-scale=1, minimum-scale=1, maximum-scale=1" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="black" />
    <meta content="telephone=no" name="format-detection" />
    <script type="text/javascript" src="/static/js/jquery.min.js"></script>
    <script type="text/javascript" src="/static/js/semantic.min.js"></script>
    <script type="text/javascript" src="/static/js/docs.js"></script>
    <script type="text/javascript" src="/static/js/admin.js"></script>
    <link rel="stylesheet" type="text/css" class="ui" href="/static/css/semantic.min.css" />
    <link rel="stylesheet" type="text/css" href="/static/css/docs.css?v=1" />
    <link rel="stylesheet" type="text/css" href="/static/css/admin.css?v=1" />
    <style type="text/css">
        body > .grid {
            height: 100%;
            position: relative;
        }

        body {
            height: 100%;
        }

        .column {
            width: 100%;
            box-sizing: border-box;
            top: 8%;
            position: absolute;

        }

        .container {
            max-width: 50%;
            margin: 0 auto;
        }

        .logo img {
            width: 70%;

            margin: 0 auto;
            display: block;
        }
    </style>
</head>
<body>
    <div class="logo"><img src="~/static/images/00.jpg" /></div>
    <div class="article grid">
        <form method="post" class="ui form">
            <div class="column">
                <div class="main container">

                    <div class="ui message">
                        <p id="msg">
                            请填写组织登录信息
                        </p>
                    </div>
                    <div class="field">
                        <label>QQ帐号</label>
                        <input type="text" name="QQnumber" id="QQnumber" placeholder="QQ帐号" />
                    </div>
                    <div class="field">
                        <label>密码</label>
                        <input type="password" name="password" id="password" placeholder="密码" />
                    </div>
                    <div class="two fields">
                        <div class="field">
                            <label>验证码</label>
                            <input type="text" name="code" id="code" placeholder="验证码" />
                        </div>
                        <div class="field">
                            <label>图型验证码</label>
                            <img src="/login/code" id="logincode" onclick="$('#logincode').attr('src','/login/code?update='+num())" style="cursor:pointer" />
                            <script type="text/javascript">
                                $("#logincode").attr("src", "/login/code?update=" + num());
                            </script>
                        </div>
                    </div>
                    <button class="fluid primary ui button" type="button" onclick="Login()">登录</button>
                    <br />
                    <a class="fluid primary ui button" href="/Register">注册</a>
                </div>
            </div>
        </form>
    </div>

</body>
</html>