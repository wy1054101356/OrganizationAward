<!DOCTYPE html>
<html>
<head>
    <title>@Page.Title</title>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta name="viewport" content="width=device-width, initial-scale=1, minimum-scale=1, maximum-scale=1" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="black" />
    <meta content="telephone=no" name="format-detection" />
    <script type="text/javascript" src="/static/js/jquery.min.js"></script>
    <script type="text/javascript" src="~/Static/js/lodash.js"></script>
    <script type="text/javascript" src="/static/js/semantic.min.js"></script>
    <script type="text/javascript" src="~/Static/js/semanticModelEXT.js"></script>
    <script type="text/javascript" src="/static/js/docs.js"></script>
    <script type="text/javascript" src="/static/js/admin.js?20180503"></script>
    @RenderSection("js", required: false)
    <link rel="stylesheet" type="text/css" class="ui" href="/static/css/semantic.min.css" />
    <link rel="stylesheet" type="text/css" href="/static/css/docs.css?v=20180502v2" />
    <link rel="stylesheet" type="text/css" href="/static/css/admin.css?v=20180502v2" />
    @RenderSection("css", required: false)
    <script type="text/javascript">
        $(function () {
            @Html.Raw(ViewBag.Js)
        });
    </script>
</head>
<body id="example" class="wide">
    <!--mobile时的菜单-->
    <div class="ui vertical inverted sidebar menu" id="toc">
        @Html.Partial("_Menu")
    </div>
    <div class="ui black big launch right attached fixed button">
        <i class="content icon"></i>
        <span class="text">Menu</span>
    </div>
    <!--mobiel时的头部-->
    <div class="ui fixed inverted main menu">
        <div class="ui container">
            <a class="launch icon item">
                <i class="content icon"></i>
            </a>
            <div class="item">
                @(Page.Title)
            </div>
        </div>
    </div>
    <div class="pusher">
        <div class="full height">
            <div class="toc">
                <!--pc的菜单-->
                <div class="ui vertical inverted sticky menu" id="pc">
                    @Html.Partial("_Menu")
                </div>
            </div>
            <script type="text/javascript">
                var url = window.location.pathname;
                var menus = $(".leftMenu .menu .item");
                for (var i = 0; i < menus.length; i++) {
                    if (menus[i].pathname == url) {
                        menus.eq(i).parents('.item').addClass("active");
                        menus[i].style.color = "#fff";
                        menus[i].style.textDecoration = "underline";
                    }
                }
                $('.leftMenu .item').click(function () {
                    $(".leftMenu .item").removeClass("active");
                    $(this).addClass("active");
                })
            </script>
            @RenderBody()
        </div>
        @RenderSection("script", required: false)

</body>
</html>
